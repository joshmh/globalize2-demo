<h1>New post</h1>

<% form_for(@post) do |f| %>
  <%= hidden_field_tag :locale, I18n.locale %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit t(:"buttons.create") %>
  </p>
<% end %>

<%= link_to t(:"navigation.home"), posts_path(:locale => I18n.locale) %>
