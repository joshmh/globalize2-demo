<p>
  <%= link_to t(:"navigation.home"), posts_path %> &middot;
  <%= link_to t(:"resource.show"), @post %> &middot;
  <%= link_to t(:"resource.destroy"), @post, :confirm => t(:"post.destroy_confirm", :default => :"resource.destroy_confirm"), :method => :delete %>
</p>

<h1><%= t :"post.edit" %></h1>

<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit t(:"buttons.update") %>
  </p>
<% end %>
