<h1><%= t :"post.edit" %></h1>

<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit t(:"buttons.update") %>
  </p>
<% end %>

<%= link_to t(:"resource.show"), @post %> |
<%= link_to t(:"navigation.home"), posts_path(:locale => I18n.locale) %>
